{
    "name": "reedware/laravel-modern-factories",
    "description": "Adds modern Laravel Factories to older versions of Laravel",
    "keywords": [
        "laravel",
        "relation",
        "join",
        "eloquent",
        "query"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Tyler Reed",
            "email": "tylernathanreed@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5",
        "illuminate/database": "^5.1",
        "illuminate/support": "^5.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^2.0",
        "illuminate/events": "^5.1",
        "mockery/mockery": "^0.9|^1.3",
        "phpunit/phpunit": "^4.5|^5.5|^6.0|^7.0|^8.0",
        "php-coveralls/php-coveralls": "^2.4",
        "reedware/sail-lite": "^1.2",
        "symfony/var-dumper": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Illuminate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Illuminate\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Reedware\\ModernLaravelFactories\\ModernLaravelFactoriesServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "audit": {
            "ignore": {
                "PKSA-zrgd-gjq7-6ykr": "Laravel 5.5 vulnerability",
                "PKSA-csyb-yc4p-mnbs": "Carbon 1.x vulnerability"
            }
        },
        "allow-plugins": {
            "kylekatarnls/update-helper": false
        }
    },
    "scripts": {
        "test:coverage": [
            "@test:suite",
            "php-coveralls -v --dry-run"
        ],
        "test:static": "phpstan",
        "test:lint": "php-cs-fixer fix --allow-risky yes --show-progress true --dry-run",
        "test:lint:fix": "php-cs-fixer fix --allow-risky yes --show-progress true",
        "test:lint:legacy": "find . -path ./vendor -prune -o -type f -name \"*.php\" -print0 | xargs -0 -n1 php -l",
        "test:suite": "phpunit",
        "test": [
            "@test:lint",
            "@test:static",
            "@test:suite",
            "@test:coverage"
        ]
    }
}
