{
    "name": "reedware/laravel-relation-joins",
    "description": "Adds the ability to join on a relationship by name.",
    "keywords": [
        "laravel",
        "relation",
        "join",
        "eloquent",
        "query"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Tyler Reed",
            "email": "tylernathanreed@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "illuminate/database": "^6.0",
        "illuminate/support": "^6.0|^7.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^3.4",
        "mockery/mockery": "^1.3.1",
        "phpstan/phpstan": "^1.0|^2.0",
        "phpunit/phpunit": "^8.5",
        "php-coveralls/php-coveralls": "^2.4",
        "reedware/sail-lite": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Illuminate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Illuminate\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Reedware\\ModernLaravelFactories\\ModernLaravelFactoriesServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "test:coverage": [
            "@test:suite",
            "php-coveralls -v --dry-run"
        ],
        "test:static": "phpstan",
        "test:lint": "php-cs-fixer fix --allow-risky yes --show-progress true --dry-run",
        "test:lint:fix": "php-cs-fixer fix --allow-risky yes --show-progress true",
        "test:suite": "phpunit",
        "test": [
            "@test:lint",
            "@test:static",
            "@test:suite",
            "@test:coverage"
        ]
    }
}